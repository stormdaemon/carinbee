<script>
  document.addEventListener('DOMContentLoaded', function() {
    const typedStrings = [
      "Ta voiture butine dans ton garage ? Fais-la voler ! üêù",
      "Arr√™te de faire la reine fain√©ante, fais bosser tes ouvri√®res ! üöó",
      "Ta caisse fait du miel pendant que tu dors üçØüí∞",
      "Dans la ruche CARinBee, m√™me les bourdons rapportent !",
      "Ta voiture : de drone de garage √† abeille rentable üêùüí∏",
      "Ton essaim de voitures peut nourrir toute la ruche !",
      "Bzzzz... C'est le bruit de ton compte en banque qui monte ! üí∞",
      "Ta bagnole butine les euros dans tout le quartier üêù‚Ç¨",
      "Fais danser ta voiture comme une abeille qui a trouv√© le jackpot !",
      "CARinBee : o√π tes 4 roues deviennent 4 ailes ! üöó‚úàÔ∏è",
      "Ta caisse produit plus de miel que tes placements ! üçØüìà",
      "Rejoins la ruche ou reste un bourdon de parking ! üêùüÖøÔ∏è",
      "Ta voiture : de chenille de garage √† papillon rentable ! ü¶ãüí∏",
      "Bzzzz-ness is buzzing ! Ta caisse fait le buzz ET le biz ! üêùüíº"
    ];

    var typed = new Typed('#typed-output', {
      strings: typedStrings,
      typeSpeed: 50,
      backSpeed: 25,
      backDelay: 2000,
      startDelay: 500,
      loop: true,
      smartBackspace: true,
      showCursor: true,
      cursorChar: '<img src="https://i.postimg.cc/1Xf6vLRL/image-1-removebg-preview-1.png" style="height: 2em; vertical-align: middle;">',
    });

    // Animation de l'abeille du header
    const beeLogo = document.querySelector('.brand-logo');
    let isAnimating = false;

    function createGlitterEffect(parentElement, duration = 3000) {
      const glitterTrail = document.createElement('div');
      glitterTrail.className = 'glitter-trail';
      parentElement.style.position = 'relative';
      parentElement.appendChild(glitterTrail);
      
      // Cr√©er des paillettes tout autour de l'abeille en cercle
      for (let i = 0; i < 20; i++) {
        const glitterParticle = document.createElement('div');
        glitterParticle.className = 'glitter-particle';
        
        // Position en cercle autour de l'abeille (plus proche)
        const angle = (i / 20) * 2 * Math.PI; // R√©partir sur 360 degr√©s
        const radius = 15 + Math.random() * 25; // Rayon entre 15px et 40px (plus proche)
        const x = Math.cos(angle) * radius;
        const y = Math.sin(angle) * radius;
        
        // Positionner au centre du conteneur glitter-trail
        glitterParticle.style.left = `calc(50% + ${x}px)`;
        glitterParticle.style.top = `calc(50% + ${y}px)`;
        glitterParticle.style.transform = 'translate(-50%, -50%)';
        
        // Taille al√©atoire
        const size = 4 + Math.random() * 6; // 4px √† 10px
        glitterParticle.style.width = `${size}px`;
        glitterParticle.style.height = `${size}px`;
        
        // Animation avec d√©lai al√©atoire
        glitterParticle.style.animationDelay = `${Math.random() * 0.8}s`;
        glitterParticle.style.animation = `glitterEffect ${2 + Math.random() * 2}s ease-out forwards, sparkle ${1 + Math.random()}s ease-in-out infinite alternate`;
        
        glitterTrail.appendChild(glitterParticle);
      }
      
      glitterTrail.classList.add('glitter-active');
      
      // Nettoyer les paillettes apr√®s la dur√©e sp√©cifi√©e
      setTimeout(() => {
        glitterTrail.remove();
      }, duration);
      
      return glitterTrail;
    }

    function createHoneyTrail(parentElement) {
      const honeyTrail = document.createElement('div');
      honeyTrail.className = 'honey-trail';
      parentElement.appendChild(honeyTrail);
      
      // Cr√©er plusieurs gouttes de miel
      for (let i = 0; i < 15; i++) {
        const honeyDrop = document.createElement('div');
        honeyDrop.style.position = 'absolute';
        honeyDrop.style.width = `${4 + Math.random() * 6}px`;
        honeyDrop.style.height = `${4 + Math.random() * 6}px`;
        honeyDrop.style.borderRadius = '50%';
        honeyDrop.style.left = `${45 + Math.random() * 10}%`;
        honeyDrop.style.top = `${45 + Math.random() * 10}%`;
        honeyDrop.style.animation = `honeyTrail ${1.5 + Math.random()}s ease-out forwards`;
        honeyDrop.style.animationDelay = `${i * 0.1}s`;
        honeyDrop.style.zIndex = '11';
        
        honeyTrail.appendChild(honeyDrop);
      }
      
      // Nettoyer apr√®s 3 secondes
      setTimeout(() => {
        honeyTrail.remove();
      }, 3000);
      
      return honeyTrail;
    }

    function createMultipleBees(parentElement) {
      const beeCount = 3;
      const bees = [];
      
      for (let i = 0; i < beeCount; i++) {
        const bee = document.createElement('img');
        bee.src = 'https://i.postimg.cc/1Xf6vLRL/image-1-removebg-preview-1.png';
        bee.style.position = 'absolute';
        bee.style.width = '35px';
        bee.style.height = '35px';
        bee.style.top = '50%';
        bee.style.left = '50%';
        bee.style.transform = 'translate(-50%, -50%)';
        bee.style.opacity = '0.7';
        bee.style.zIndex = '20';
        bee.style.pointerEvents = 'none';
        
        // Animation d√©cal√©e pour chaque abeille
        bee.style.animation = `beeEscape ${4 + i * 0.5}s cubic-bezier(0.25, 0.46, 0.45, 0.94) forwards`;
        bee.style.animationDelay = `${i * 0.3}s`;
        
        parentElement.appendChild(bee);
        bees.push(bee);
        
        // Nettoyer apr√®s l'animation
        setTimeout(() => {
          bee.remove();
        }, (4 + i * 0.5 + i * 0.3) * 1000);
      }
      
      return bees;
    }

    function playBeeSound() {
      // Cr√©er un son de bourdonnement synth√©tique
      if (typeof AudioContext !== 'undefined' || typeof webkitAudioContext !== 'undefined') {
        const audioContext = new (window.AudioContext || window.webkitAudioContext)();
        
        // Oscillateur principal pour le bourdonnement
        const oscillator = audioContext.createOscillator();
        const gainNode = audioContext.createGain();
        
        oscillator.connect(gainNode);
        gainNode.connect(audioContext.destination);
        
        oscillator.frequency.setValueAtTime(220, audioContext.currentTime);
        oscillator.frequency.exponentialRampToValueAtTime(180, audioContext.currentTime + 0.5);
        oscillator.frequency.exponentialRampToValueAtTime(250, audioContext.currentTime + 1);
        oscillator.frequency.exponentialRampToValueAtTime(200, audioContext.currentTime + 2);
        
        gainNode.gain.setValueAtTime(0, audioContext.currentTime);
        gainNode.gain.linearRampToValueAtTime(0.1, audioContext.currentTime + 0.1);
        gainNode.gain.exponentialRampToValueAtTime(0.05, audioContext.currentTime + 2);
        gainNode.gain.linearRampToValueAtTime(0, audioContext.currentTime + 2.5);
        
        oscillator.type = 'sawtooth';
        oscillator.start(audioContext.currentTime);
        oscillator.stop(audioContext.currentTime + 2.5);
      }
    }

    function triggerBeeAnimation() {
      if (isAnimating) return;
      isAnimating = true;

      // Effet de zoom sur la page
      document.body.classList.add('page-zoom');

      // Son de l'abeille
      playBeeSound();

      // Ajouter l'effet de battement d'ailes
      beeLogo.classList.add('bee-flutter');

      // Cr√©er l'effet de paillettes scintillantes au d√©part (plus spectaculaire)
      createGlitterEffect(beeLogo.parentElement, 1000);
      
      // Cr√©er la tra√Æn√©e de miel
      setTimeout(() => {
        createHoneyTrail(beeLogo.parentElement);
      }, 200);
      
      // Cr√©er des abeilles suppl√©mentaires qui suivent
      setTimeout(() => {
        createMultipleBees(beeLogo.parentElement);
      }, 500);
      
      // D√©clencher l'animation de l'abeille principale
      setTimeout(() => {
        beeLogo.classList.add('bee-flying');
      }, 100);

      // Cr√©er l'effet de paillettes scintillantes √† l'arriv√©e (encore plus spectaculaire)
      setTimeout(() => {
        createGlitterEffect(beeLogo.parentElement, 2500);
      }, 3800); // Appara√Æt quand l'abeille atterrit

      // Cr√©er une explosion de miel √† l'atterrissage
      setTimeout(() => {
        createHoneyTrail(beeLogo.parentElement);
        // Cr√©er un deuxi√®me effet de paillettes pour l'explosion finale
        setTimeout(() => {
          createGlitterEffect(beeLogo.parentElement, 1500);
        }, 200);
      }, 3900);

      // Nettoyer et r√©initialiser apr√®s l'animation compl√®te
      setTimeout(() => {
        beeLogo.classList.remove('bee-flying', 'bee-flutter');
        document.body.classList.remove('page-zoom');
        isAnimating = false;
      }, 4500);
    }

    // D√©clencher l'animation automatiquement au chargement de la page
    setTimeout(() => {
      triggerBeeAnimation();
    }, 1000); // D√©lai de 1 seconde apr√®s le chargement

    // Garder la possibilit√© de cliquer pour relancer l'animation
    beeLogo.addEventListener('click', function(e) {
      e.preventDefault();
      triggerBeeAnimation();
    });
  });
</script>
