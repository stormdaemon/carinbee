  <style>
    body {
      overflow: hidden;
    }
    
    /* Animation améliorée pour l'abeille */
    .home-btn {
      position: relative;
      transition: all 0.3s ease;
    }
    
    .home-btn:hover {
      transform: translateY(-2px);
    }
    
    .home-btn span img {
      transition: transform 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94), opacity 0.8s ease-in-out;
      transform-origin: center center;
    }
    
    .home-btn:hover span img {
      transform: translateY(-30px) translateX(10px) rotate(360deg) scale(1.3);
      opacity: 0.8;
    }
    
    /* Animation de pulsation pour l'abeille au repos */
    @keyframes beePulse {
      0%, 100% { transform: scale(1); }
      50% { transform: scale(1.1); }
    }
    
    .bee-pulse {
      animation: beePulse 2s ease-in-out infinite;
    }
  </style>
  <header class="header-custom">
    <div class="container">
      <div class="row align-items-center justify-content-center">
        <div class="col-auto">
          <img src="https://i.postimg.cc/1Xf6vLRL/image-1-removebg-preview-1.png" alt="CARinBee Logo" class="brand-logo">
        </div>
        <div class="col-auto">
          <span class="brand-name">CARinBee</span>
        </div>
      </div>
    </div>
  </header>

  <main class="main-content">
    <div class="container">
      <div class="row align-items-center">

        <div class="col-lg-4 col-md-12 mb-4 mb-lg-0 intro-text">
          <p>Rejoignez la Ruche : Des milliers de voitures prêtes à décoller !</p>
          <p><span id="typed-output"></span></p>
        </div>

        <div class="col-lg-3 col-md-6 mb-4 mb-md-0 buttons-section">
          <%= link_to vehicles_path, class: "no-underline" do %>
          <p class="home-btn">Louer une voiture
          <span>
            <img
          src="https://i.postimg.cc/1Xf6vLRL/image-1-removebg-preview-1.png"
          alt="logo" width="30px" class="bee-pulse">
          </span
          ></p>
          <% end %>
        </div>

        <div class="col-lg-5 col-md-6 phone-section">
          <div class="phone-mockup">
            <div class="phone-notch"></div>
            <div class="phone-screen">
              <video autoplay loop muted playsinline>
                <source src="https://res.cloudinary.com/dgjsq5fnl/video/upload/v1748342577/Generated_video_1_1_n5ee41.mp4" type="video/mp4">
                Votre navigateur ne supporte pas la balise vidéo.
              </video>
            </div>
          </div>
        </div>

      </div>
    </div>

<script src="https://unpkg.com/typed.js@2.0.16/dist/typed.umd.js"></script>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const typedStrings = [
      "Share your car, spare the Earth.",
      "Less CO₂, more €€!",
      "A moving car is a paying car.",
      "Fewer costs, more trips.",
      "Smart renting, smooth driving.",
      "Blessed be the neighbor.",
      "More karma, less car-ma.",
      "CARinBee — Sweet as honey for your wallet.",
      "Bee the change. Share your ride.",
      "Your car can Bee more than a driveway decoration.",
      "CARinBee — Because even cars need to socialize."
    ];

    var typed = new Typed('#typed-output', {
      strings: typedStrings,
      typeSpeed: 50,
      backSpeed: 25,
      backDelay: 2000,
      startDelay: 500,
      loop: true,
      smartBackspace: true,
      showCursor: true,
      cursorChar: '<img src="https://i.postimg.cc/1Xf6vLRL/image-1-removebg-preview-1.png" style="height: 2em; vertical-align: middle;">',
    });
  });
</script>
