          <li class="nav-item me-2">
            <%= link_to "Connexion", new_user_session_path, class: "btn btn-outline-dark btn-sm" %>
          </li>
          <li class="nav-item">
            <%= link_to "Inscription", new_user_registration_path, class: "btn btn-dark btn-sm" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
