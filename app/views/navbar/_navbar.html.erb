    font-weight: bold;
    color: #333;
    text-shadow: 1px 1px 2px rgba(0,0,0,0.1);
  }
  
  .nav-link {
    color: #333 !important;
    font-weight: 500;
    transition: color 0.3s ease;
    position: relative;
  }
  
  .nav-link:hover {
    color: #000 !important;
  }
  
  .nav-link.active {
    color: #000 !important;
    font-weight: 600;
  }
  
  .nav-link.active::after {
    content: '';
    position: absolute;
    bottom: -5px;
    left: 50%;
    transform: translateX(-50%);
    width: 30px;
    height: 3px;
    background-color: #333;
    border-radius: 2px;
  }
  
  .dropdown-menu {
    border: none;
    box-shadow: 0 4px 20px rgba(0,0,0,0.15);
    border-radius: 10px;
    padding: 0.5rem 0;
    min-width: 200px;
    max-width: 250px;
    z-index: 1050;
  }
  
  .dropdown-menu-end {
    --bs-position: end;
  }
  
  .dropdown-item {
    padding: 0.5rem 1.5rem;
    transition: background-color 0.3s ease;
    white-space: nowrap;
  }
  
  .dropdown-item:hover {
    background-color: #f8f9fa;
  }
  
  .btn {
    border-radius: 20px;
    transition: all 0.3s ease;
  }
  
  .btn:hover {
    transform: translateY(-1px);
  }
  
  /* Correction pour éviter le débordement du dropdown */
  .navbar-nav .dropdown {
    position: static;
  }
  
  @media (min-width: 992px) {
    .navbar-nav .dropdown {
      position: relative;
    }
    
    .dropdown-menu {
      position: absolute !important;
      right: 0 !important;
      left: auto !important;
      transform: none !important;
    }
  }
  
  @media (max-width: 991px) {
    .navbar-nav {
      text-align: center;
    }
    
    .nav-item {
      margin: 0.25rem 0;
    }
    
    .dropdown-menu {
      position: static !important;
      float: none;
      width: auto;
      margin-top: 0;
      background-color: transparent;
      border: 0;
      box-shadow: none;
    }
    
    .dropdown-item {
      color: #333;
      text-align: center;
    }
  }
</style>
