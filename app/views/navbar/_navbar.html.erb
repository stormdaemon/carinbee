    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav me-auto">
        <li class="nav-item">
          <%= link_to "Véhicules", vehicles_path, class: "nav-link #{'active' if current_page?(vehicles_path)}" %>
