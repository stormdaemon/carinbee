<%# app/views/vehicles/new.html.erb %>

<style>
  /* Animation pour l'abeille sur le bouton "Créer le véhicule" */
  #createVehicleButton {
    position: relative;
    overflow: visible;
    transition: all 0.3s ease;
  }
  
  #createVehicleButton:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(0, 123, 255, 0.3);
  }
  
  #smallBeeOnCreateVehicleButton {
    position: absolute;
    top: -12px;
    right: -12px;
    height: 30px;
    width: auto;
    z-index: 10;
    transition: transform 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94), opacity 0.8s ease-in-out;
    pointer-events: none;
    transform-origin: center center;
  }
  
  .flying-bee-create-vehicle {
    transform: translate(120px, -120px) rotate(360deg) scale(1.3);
    opacity: 0;
  }
  
  /* Animation de pulsation pour l'abeille au repos */
  @keyframes beePulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.1); }
  }
  
  .bee-pulse {
    animation: beePulse 2s ease-in-out infinite;
  }
  
  /* Style pour le geocoder Mapbox */
  #geocoder-container {
    width: 100% !important;
  }
  
  #geocoder-container .mapboxgl-ctrl-geocoder {
    width: 100% !important;
    max-width: none !important;
    font-family: inherit !important;
  }
  
  #geocoder-container .mapboxgl-ctrl-geocoder--input {
    width: 100% !important;
    height: calc(1.5em + 0.75rem + 2px) !important;
    padding: 0.375rem 0.75rem 0.375rem 2.5rem !important;
    font-size: 1rem !important;
    font-weight: 400 !important;
    line-height: 1.5 !important;
    color: #212529 !important;
    background-color: #fff !important;
    border: 1px solid #ced4da !important;
    border-radius: 0.375rem !important;
    box-sizing: border-box !important;
  }
  
  #geocoder-container .mapboxgl-ctrl-geocoder--icon {
    left: 0.75rem !important;
    top: 50% !important;
    transform: translateY(-50%) !important;
  }
  
  #geocoder-container .mapboxgl-ctrl-geocoder--icon-search {
    fill: #6c757d !important;
  }
</style>

<!-- Main Content Area -->
<div class="container mt-4 mb-4">
  <div class="card shadow-sm p-4 rounded-3" style="background-color: #FFFFFF;">

    <h3 class="fw-bold mb-4 pt-2">Enregistrer votre véhicule</h3>

    <%= form_with(model: @vehicle, url: vehicles_path, method: :post, local: true) do |form| %>
      <% if @vehicle.errors.any? %>
        <div id="error_explanation" class="alert alert-danger">
          <h5 class="alert-heading">
            <%= pluralize(@vehicle.errors.count, "erreur") %> 
            <%= @vehicle.errors.count == 1 ? "a empêché" : "ont empêché" %> 
            l'enregistrement de ce véhicule :
          </h5>
          <ul>
            <% @vehicle.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="row">
        <div class="col-md-6 mb-3">
          <%= form.label :brand, "Marque", class: "form-label fw-semibold" %>
          <%= form.text_field :brand, class: "form-control", placeholder: "ex: Mercedes" %>
        </div>
        <div class="col-md-6 mb-3">
          <%= form.label :model, "Modèle", class: "form-label fw-semibold" %>
          <%= form.text_field :model, class: "form-control", placeholder: "ex: Vito" %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-6 mb-3">
          <%= form.label :category, "Catégorie", class: "form-label fw-semibold" %>
          <%= form.select :category, options_for_select(["Monospace", "Confort", "Eco", "Sport", "Utilitaire"], @vehicle.category), { prompt: "Sélectionner une catégorie" }, class: "form-select" %>
        </div>
        <div class="col-md-6 mb-3">
          <%= form.label :daily_price, "Prix par jour (€)", class: "form-label fw-semibold" %>
          <%= form.number_field :daily_price, class: "form-control", step: "0.01", placeholder: "ex: 90" %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-6 mb-3">
          <%= form.label :number_of_places, "Nombre de places", class: "form-label fw-semibold" %>
          <%= form.number_field :number_of_places, class: "form-control", placeholder: "ex: 8" %>
        </div>
        <div class="col-md-6 mb-3">
          <%= form.label :fuel_type, "Type de carburant", class: "form-label fw-semibold" %>
          <%= form.select :fuel_type, options_for_select(["Diesel", "Essence", "Électrique", "Hybride", "GPL"], @vehicle.fuel_type), { prompt: "Sélectionner un type de carburant" }, class: "form-select" %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-6 mb-3">
          <%= form.label :kilometers, "Kilométrage", class: "form-label fw-semibold" %>
          <%= form.number_field :kilometers, class: "form-control", placeholder: "ex: 80000" %>
        </div>
        <div class="col-md-6 mb-3">
          <%= form.label :localization, "Localisation", class: "form-label fw-semibold" %>
          <%= form.text_field :localization, class: "form-control", placeholder: "ex: Paris", id: "localization-input" %>
        </div>
      </div>

      <div class="mb-3">
        <%= form.label :description, "Description", class: "form-label fw-semibold" %>
        <%= form.text_area :description, class: "form-control", rows: 4, placeholder: "Décrivez votre véhicule, ses caractéristiques et conditions particulières..." %>
      </div>

      <div class="mb-3">
        <%= form.label :image_url, "URL de l'image", class: "form-label fw-semibold" %>
        <%= form.text_field :image_url, class: "form-control", placeholder: "https://exemple.com/votre-image-vehicule.jpg" %>
      </div>

      <div class="mb-3 form-check">
        <%= form.check_box :available, { checked: true, class: "form-check-input" } %>
        <%= form.label :available, "Rendre ce véhicule disponible à la location immédiatement ?", class: "form-check-label" %>
      </div>

      <div class="text-center mt-4">
        <div style="position: relative; display: inline-block;">
          <%= form.submit "Créer le véhicule", class: "btn btn-primary", id: "createVehicleButton" %>
          <img id="smallBeeOnCreateVehicleButton"
               src="https://i.postimg.cc/1Xf6vLRL/image-1-removebg-preview-1.png"
               alt="Small Bee on Create Vehicle Button"
               class="bee-pulse">
        </div>
        <%= link_to "Annuler", my_vehicles_vehicles_path, class: "btn btn-outline-secondary" %>
      </div>
    <% end %>

  </div> <!-- End of card -->
</div> <!-- End of container -->

<!-- JavaScript pour l'animation du logo sur le bouton (adapté pour Turbo) -->
<script>
  function initializeVehicleNewAnimation() {
    const createVehicleBtn = document.getElementById('createVehicleButton');
    const beeLogoOnCreateVehicleBtn = document.getElementById('smallBeeOnCreateVehicleButton');

    if (createVehicleBtn && beeLogoOnCreateVehicleBtn) {
      beeLogoOnCreateVehicleBtn.classList.remove('flying-bee-create-vehicle');
      let isHovering = false;
      let hasFlown = false;

      createVehicleBtn.addEventListener('mouseenter', function() {
        if (!isHovering) {
          isHovering = true;
          hasFlown = false;
          // Arrêter l'animation de pulsation
          beeLogoOnCreateVehicleBtn.classList.remove('bee-pulse');
        }
        if (!hasFlown) {
          beeLogoOnCreateVehicleBtn.classList.add('flying-bee-create-vehicle');
          hasFlown = true;
        }
      });
      
      createVehicleBtn.addEventListener('mouseleave', function() {
        isHovering = false;
        // Redémarrer l'animation de pulsation après un délai
        setTimeout(() => {
          if (!isHovering) {
            beeLogoOnCreateVehicleBtn.classList.remove('flying-bee-create-vehicle');
            beeLogoOnCreateVehicleBtn.classList.add('bee-pulse');
            hasFlown = false;
          }
        }, 1000);
      });
    }
  }

  document.addEventListener('turbo:load', initializeVehicleNewAnimation);
</script>

<script src="https://api.mapbox.com/mapbox-gl-js/plugins/mapbox-gl-geocoder/v5.0.0/mapbox-gl-geocoder.min.js"></script>
<link rel="stylesheet" href="https://api.mapbox.com/mapbox-gl-js/plugins/mapbox-gl-geocoder/v5.0.0/mapbox-gl-geocoder.css" type="text/css">

<script>
  function initializeMapboxGeocoder() {
    const localizationInput = document.getElementById('localization-input');
    
    if (localizationInput && typeof MapboxGeocoder !== 'undefined') {
      // Créer le geocoder
      const geocoder = new MapboxGeocoder({
        accessToken: '<%= ENV["MAPBOX_API_KEY"] %>',
        types: 'country,region,place,postcode,locality,neighborhood',
        countries: 'fr', // Limiter à la France
        language: 'fr',
        placeholder: 'Tapez une ville ou adresse...',
        bbox: [-5.142, 41.333, 9.662, 51.124] // Bbox de la France
      });

      // Remplacer l'input par le geocoder
      const container = localizationInput.parentNode;
      const geocoderContainer = document.createElement('div');
      geocoderContainer.id = 'geocoder-container';
      
      // Insérer le container du geocoder
      container.insertBefore(geocoderContainer, localizationInput);
      
      // Ajouter le geocoder au container
      geocoder.addTo('#geocoder-container');
      
      // Masquer l'input original
      localizationInput.style.display = 'none';
      
      // Synchroniser les valeurs
      geocoder.on('result', function(e) {
        localizationInput.value = e.result.place_name;
      });
      
      // Si l'input a déjà une valeur, l'afficher dans le geocoder
      if (localizationInput.value) {
        geocoder.setInput(localizationInput.value);
      }
      
      // Styliser le geocoder pour qu'il ressemble à nos autres inputs
      setTimeout(() => {
        const geocoderInput = geocoderContainer.querySelector('.mapboxgl-ctrl-geocoder--input');
        const geocoderControl = geocoderContainer.querySelector('.mapboxgl-ctrl-geocoder');
        
        if (geocoderControl) {
          // Faire en sorte que le geocoder prenne toute la largeur
          geocoderControl.style.width = '100%';
          geocoderControl.style.maxWidth = 'none';
        }
        
        if (geocoderInput) {
          geocoderInput.classList.add('form-control');
          geocoderInput.style.border = '1px solid #ced4da';
          geocoderInput.style.borderRadius = '0.375rem';
          geocoderInput.style.fontSize = '1rem';
          geocoderInput.style.padding = '0.375rem 0.75rem';
          geocoderInput.style.width = '100%';
          geocoderInput.style.boxSizing = 'border-box';
        }
      }, 100);
    }
  }

  document.addEventListener('turbo:load', function() {
    initializeVehicleNewAnimation();
    initializeMapboxGeocoder();
  });
</script>
