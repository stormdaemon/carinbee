<style>
  /* Animation pour l'abeille sur le bouton "Mettre à jour" */
  #updateProfileButton {
    position: relative;
    overflow: visible;
    transition: all 0.3s ease;
  }
  
  #updateProfileButton:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(255, 204, 1, 0.3);
  }
  
  #updateBeeIcon {
    position: absolute;
    top: -12px;
    right: -12px;
    height: 30px;
    width: auto;
    z-index: 10;
    transition: transform 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94), opacity 0.8s ease-in-out;
    pointer-events: none;
    transform-origin: center center;
  }
  
  .flying-bee-update {
    transform: translate(120px, -120px) rotate(360deg) scale(1.3);
    opacity: 0;
  }
  
  /* Animation de pulsation pour l'abeille au repos */
  @keyframes beePulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.1); }
  }
  
  .bee-pulse {
    animation: beePulse 2s ease-in-out infinite;
  }
</style>

<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-sm">
        <div class="card-body" style="background-color: #F4F4F4;">
          <h2 class="card-title text-center mb-4" style="color: #1B1C1C;">Modifier mon profil</h2>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="row">
              <div class="col-md-6">
                <div class="form-group mb-3">
                  <%= f.label :first_name, "Prénom", class: "form-label" %><br />
                  <%= f.text_field :first_name, autocomplete: "first_name", class: "form-control" %>
                </div>

                <div class="form-group mb-3">
                  <%= f.label :last_name, "Nom", class: "form-label" %><br />
                  <%= f.text_field :last_name, autocomplete: "last_name", class: "form-control" %>
                </div>

                <div class="form-group mb-3">
                  <%= f.label :email, "Email", class: "form-label" %><br />
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
                  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                    <small class="text-warning">En attente de confirmation pour : <%= resource.unconfirmed_email %></small>
                  <% end %>
                </div>
              </div>

              <div class="col-md-6">
                <div class="form-group mb-3">
                  <%= f.label :address, "Adresse", class: "form-label" %><br />
                  <%= f.text_field :address, autocomplete: "address", class: "form-control" %>
                </div>

                <div class="form-group mb-3">
                  <%= f.label :age, "Âge", class: "form-label" %><br />
                  <%= f.number_field :age, autocomplete: "age", class: "form-control" %>
                </div>
              </div>
            </div>

            <hr class="my-4">
            <h5 class="mb-3">Changer le mot de passe</h5>
            <p class="text-muted small">Laissez vide si vous ne souhaitez pas changer votre mot de passe</p>

            <div class="row">
              <div class="col-md-6">
                <div class="form-group mb-3">
                  <%= f.label :password, "Nouveau mot de passe", class: "form-label" %>
                  <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Laissez vide pour ne pas changer" %>
                  <% if @minimum_password_length %>
                    <small class="text-muted"><%= @minimum_password_length %> caractères minimum</small>
                  <% end %>
                </div>

                <div class="form-group mb-3">
                  <%= f.label :password_confirmation, "Confirmation du nouveau mot de passe", class: "form-label" %><br />
                  <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
                </div>
              </div>

              <div class="col-md-6">
                <div class="form-group mb-3">
                  <%= f.label :current_password, "Mot de passe actuel", class: "form-label" %>
                  <small class="text-muted">(requis pour confirmer les modifications)</small><br />
                  <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control", required: true %>
                </div>
              </div>
            </div>

            <div class="text-center mt-4">
              <div style="position: relative; display: inline-block;">
                <%= f.submit "Mettre à jour", class: "btn btn-warning px-4 me-3", id: "updateProfileButton" %>
                <img id="updateBeeIcon" 
                     src="https://i.postimg.cc/1Xf6vLRL/image-1-removebg-preview-1.png" 
                     alt="Bee Icon" 
                     class="bee-pulse">
              </div>
              <%= link_to "Retour", :back, class: "btn btn-outline-secondary px-4" %>
            </div>
          <% end %>

          <hr class="my-4">
          <div class="text-center">
            <h5 class="text-danger mb-3">Zone dangereuse</h5>
            <p class="text-muted mb-3">Cette action est irréversible</p>
            <%= button_to "Supprimer mon compte", registration_path(resource_name), 
                data: { 
                  confirm: "Êtes-vous sûr de vouloir supprimer votre compte ? Cette action est irréversible.", 
                  turbo_confirm: "Êtes-vous sûr de vouloir supprimer votre compte ? Cette action est irréversible." 
                }, 
                method: :delete, 
                class: "btn btn-outline-danger btn-sm" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  function initializeUpdateProfileAnimation() {
    const updateButton = document.getElementById('updateProfileButton');
    const beeIcon = document.getElementById('updateBeeIcon');

    if (updateButton && beeIcon) {
      beeIcon.classList.remove('flying-bee-update');
      let isHovering = false;
      let hasFlown = false;

      updateButton.addEventListener('mouseenter', function() {
        if (!isHovering) {
          isHovering = true;
          hasFlown = false;
          // Arrêter l'animation de pulsation
          beeIcon.classList.remove('bee-pulse');
        }
        if (!hasFlown) {
          beeIcon.classList.add('flying-bee-update');
          hasFlown = true;
        }
      });
      
      updateButton.addEventListener('mouseleave', function() {
        isHovering = false;
        // Redémarrer l'animation de pulsation après un délai
        setTimeout(() => {
          if (!isHovering) {
            beeIcon.classList.remove('flying-bee-update');
            beeIcon.classList.add('bee-pulse');
            hasFlown = false;
          }
        }, 1000);
      });
    }
  }

  document.addEventListener('turbo:load', initializeUpdateProfileAnimation);
</script>
