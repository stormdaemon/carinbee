<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-sm">
        <div class="card-body devise-card">
          <h2 class="card-title text-center mb-4 devise-title">Modifier mon profil</h2>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="row">
              <div class="col-md-6">
                <div class="form-group mb-3">
                  <%= f.label :first_name, "Prénom", class: "form-label" %><br />
                  <%= f.text_field :first_name, autocomplete: "first_name", class: "form-control" %>
                </div>

                <div class="form-group mb-3">
                  <%= f.label :last_name, "Nom", class: "form-label" %><br />
                  <%= f.text_field :last_name, autocomplete: "last_name", class: "form-control" %>
                </div>

                <div class="form-group mb-3">
                  <%= f.label :email, "Email", class: "form-label" %><br />
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
                  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                    <small class="text-warning">En attente de confirmation pour : <%= resource.unconfirmed_email %></small>
                  <% end %>
                </div>
              </div>

              <div class="col-md-6">
                <div class="form-group mb-3">
                  <%= f.label :address, "Adresse", class: "form-label" %><br />
                  <%= f.text_field :address, autocomplete: "address", class: "form-control" %>
                </div>

                <div class="form-group mb-3">
                  <%= f.label :age, "Âge", class: "form-label" %><br />
                  <%= f.number_field :age, autocomplete: "age", class: "form-control" %>
                </div>
              </div>
            </div>

            <hr class="my-4">
            <h5 class="mb-3">Changer le mot de passe</h5>
            <p class="text-muted small">Laissez vide si vous ne souhaitez pas changer votre mot de passe</p>

            <div class="row">
              <div class="col-md-6">
                <div class="form-group mb-3">
                  <%= f.label :password, "Nouveau mot de passe", class: "form-label" %>
                  <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Laissez vide pour ne pas changer" %>
                  <% if @minimum_password_length %>
                    <small class="text-muted"><%= @minimum_password_length %> caractères minimum</small>
                  <% end %>
                </div>

                <div class="form-group mb-3">
                  <%= f.label :password_confirmation, "Confirmation du nouveau mot de passe", class: "form-label" %><br />
                  <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
                </div>
              </div>

              <div class="col-md-6">
                <div class="form-group mb-3">
                  <%= f.label :current_password, "Mot de passe actuel", class: "form-label" %>
                  <small class="text-muted">(requis pour confirmer les modifications)</small><br />
                  <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control", required: true %>
                </div>
              </div>
            </div>

            <div class="text-center mt-4">
              <div data-controller="bee-animation" data-bee-animation-type-value="update">
                <%= f.submit "Mettre à jour", class: "btn btn-warning px-4 me-3", id: "updateProfileButton", data: { bee_animation_target: "button" } %>
                <img id="updateBeeIcon" 
                     src="https://i.postimg.cc/1Xf6vLRL/image-1-removebg-preview-1.png" 
                     alt="Bee Icon" 
                     class="bee-pulse"
                     data-bee-animation-target="beeIcon">
              </div>
              <%= link_to "Retour", :back, class: "btn btn-outline-secondary px-4" %>
            </div>
          <% end %>

          <hr class="my-4">
          <div class="text-center">
            <h5 class="text-danger mb-3">Zone dangereuse</h5>
            <p class="text-muted mb-3">Cette action est irréversible</p>
            <%= button_to "Supprimer mon compte", registration_path(resource_name), 
                data: { 
                  confirm: "Êtes-vous sûr de vouloir supprimer votre compte ? Cette action est irréversible.", 
                  turbo_confirm: "Êtes-vous sûr de vouloir supprimer votre compte ? Cette action est irréversible." 
                }, 
                method: :delete, 
                class: "btn btn-outline-danger btn-sm" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
