<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-sm">
        <div class="card-body" style="background-color: #F4F4F4;">
          <h2 class="card-title text-center mb-4" style="color: #1B1C1C;">Connexion</h2>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group mb-3">
              <%= f.label :email, "Email", class: "form-label" %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>

            <div class="form-group mb-3">
              <%= f.label :password, "Mot de passe", class: "form-label" %><br />
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="form-check mb-3">
                <%= f.check_box :remember_me, class: "form-check-input" %>
                <%= f.label :remember_me, "Se souvenir de moi", class: "form-check-label" %>
              </div>
            <% end %>

            <div class="text-center">
              <%= f.submit "Se connecter", class: "btn btn-warning px-4" %>
            </div>
          <% end %>

          <div class="text-center mt-3">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
